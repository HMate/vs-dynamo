{
    "name": "vs-dynamo",
    "displayName": "vs-dynamo",
    "description": "Create Dynamo diagrams in vscode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vs-dynamo.visualize"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vs-dynamo.visualize",
                "title": "Visualize a DMLA script"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack --config ./build/node-extension.webpack.config.js && webpack --config ./build/webview.webpack.config.js",
        "watch": "webpack --watch --config ./build/node-extension.webpack.config.js ./build/webview.webpack.config.js",
        "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/lodash": "^4.14.168",
        "@types/mini-css-extract-plugin": "^1.2.2",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.53.0",
        "@types/webpack": "^4.41.26",
        "@typescript-eslint/eslint-plugin": "^4.15.0",
        "@typescript-eslint/parser": "^4.15.0",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^5.0.2",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "html-webpack-plugin": "^5.0.0",
        "mini-css-extract-plugin": "1.3.4",
        "mocha": "^8.1.3",
        "node-sass": "^5.0.0",
        "prettier": "^2.2.1",
        "sass-loader": "^11.0.1",
        "style-loader": "^2.0.0",
        "ts-loader": "^8.0.16",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1",
        "webpack": "^5.21.2",
        "webpack-cli": "^4.2.0"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4
    },
    "dependencies": {
        "lodash": "^4.17.20"
    }
}
